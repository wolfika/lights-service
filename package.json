{
	"name": "lights-service",
	"description": "Microservice used to abstract the control of Milight lights",
	"version": "0.0.1",
	"license": "MIT",
	"author": {
		"name": "Máté Farkas",
		"email": "info@wolfika.eu",
		"url": "http://wolfika.eu"
	},
	"scripts": {
		"dev": "micro-dev",
		"start": "micro -p ${PORT:-3000}",
		"test": "xo && nyc ava test/**/*.test.js"
	},
	"engines": {
		"node": ">= 8"
	},
	"main": "index.js",
	"xo": {
		"rules": {
			"unicorn/custom-error-definition": 0,
			"capitalized-comments": 0
		}
	},
	"nyc": {
		"reporter": [
			"lcov",
			"text"
		]
	},
	"dependencies": {
		"micro": "^9.0.2",
		"micro-post": "^1.0.0",
		"milight": "^1.0.0",
		"onecolor": "^3.0.5"
	},
	"devDependencies": {
		"ava": "^0.24.0",
		"codecov": "^3.0.0",
		"micro-dev": "^1.4.0",
		"nyc": "^11.3.0",
		"sinon": "^4.1.2",
		"xo": "^0.18.2"
	}
}
